{
  "extends": "@labs/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@labs/auth": ["../../packages/auth/src/index.ts"],
      "@labs/auth/*": ["../../packages/auth/src/*"],
      "@labs/database": ["../../packages/database/src/index.ts"],
      "@labs/utils": ["../../packages/utils/src/index.ts"]
    }
  },
  "include": ["src/**/*", "api/**/*"],
  "exclude": ["node_modules"]
}
